{
    "compilerOptions": {
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "noEmitOnError": true,
        "removeComments": false,
        "target": "es5",
        "outFile": "game.js",
        "module": "commonjs"
    },
    "include": [
        "Types/**/*",
        "StoryScript/**/!(app)*.ts",
        "Games/**/*.ts",
        "StoryScript/app.ts"
    ],
    "exclude": [
        "node_modules",
        "wwwroot"
    ]
}