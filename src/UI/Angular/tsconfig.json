{
    "extends": "../../tsconfig",
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "typeRoots": [
            "../../node_modules/@types",
            "../../types"
        ],
        "types": [
            "jquery",
            "angular",
            "bootstrap",
            "storyscript"
        ],
    },
    "include": [
        "./src/Services/**/*.tss",
        "./src/Components/**/*.ts",
        "./src/Directives/**/*.ts",
        "./app*.ts",
        "./main.ts"
    ]
}