{
    "compilerOptions": {
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "noEmitOnError": true,
        "removeComments": false,
        "strictNullChecks": false,
        "target": "es6",
        "outFile": "../dist/js/ui.js",
        "typeRoots": [
            "../node_modules/@types"
        ],
        "types": [
            "jquery",
            "angular",
            "bootstrap"
        ],
        "sourceMap": true
    },
    "include": [
        "../../types/**/*.ts",
        "./Services/**/*.ts",
        "./Components/**/*.ts",
        "./Controllers/*.ts",
        "./app.ts"
    ]
}