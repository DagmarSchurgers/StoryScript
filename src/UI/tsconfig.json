{
    "extends": "../tsconfig",
    "compilerOptions": {
        "baseUrl": ".",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "typeRoots": [
            "../../node_modules/@types"
        ],
        "types": [
            "node",
            "webpack-env"   
        ],
        "paths": {
            "storyScript/*": ["../Engine/*"],
        }
    },
    "include": [
        "../Engine/**/*.ts"
    ]
}